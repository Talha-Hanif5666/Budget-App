<%= form_with(model: transaction) do |form| %>
  <div class="new-save">
    <div class="actions">
      <%= form.submit "Save", class: "registration-button" %>
    </div>
  </div>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="sign-color">
    <div class="field form-div">
      <% form.label :name, id: "Name", style: "display: block" %>
      <%= form.text_field :name, placeholder: "Name", class: "form-input" %>
    </div>

    <div class="field form-div">
      <%= form.label :amount, id: "Amount", style: "display: block" %>
      <%= form.text_field :amount, type: :number, class: "form-input" %>
    </div>

    <div class="field form-div">
      <%= form.select :category_id, options_for_select([['Select a category', '']] + Category.all.map { |c| [c.name, c.id] }), {}, { class: "form-input" } %>
    </div>
  </div>
<% end %>