<div id="<%= dom_id category %>">
  <%= link_to transactions_path(category_id: category.id), class: "card-link" do %>
    <div class="category-card sign-color">
      <%= image_tag(category.icon, class: "category-image") %>
      <%= category.name %>
      <p><%= category.transactions.sum(:amount)%></p>
    </div>
  <% end %>
</div>