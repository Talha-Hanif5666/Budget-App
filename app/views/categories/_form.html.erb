<%= form_with(model: category) do |form| %>
  <div class="new-save">
    <div class="actions">
      <%= form.submit "Save", class: "registration-button" %>
    </div>
  </div>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="sign-color">
    <div class="field form-div">
      <% form.label :name, style: "display: block"%>
      <%= form.text_field :name, id: "Name", placeholder: "Name", class: "form-input" %>
    </div>

    <div class="field form-div">
      <%= form.label :icon, id: "Icon", style: "display: block" %>
      <%= form.file_field :icon %>
    </div>
  </div>
<% end %>