<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="registration-head">
    <i class="bi bi-arrow-left"></i>
    <p>REGISTER</p>
    <div class="actions">
      <%= f.submit "Next", class: "registration-button" %>
    </div>
  </div>
  <div class="sign-color">
    <div class="field form-div">
      <% f.label :email %>
      <%= f.email_field :email,  id: "Email", autofocus: true, autocomplete: "email", required: true, placeholder: "Email", class: "form-input" %>
    </div>

    <div class="field form-div">
      <% f.label :password %>
      <%= f.password_field :password,  id: "Password", autocomplete: "current-password", placeholder: "Password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-div">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="registration-links">
  <div class="question">Don't have an account?</div><br />
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  <% end %>
</div>